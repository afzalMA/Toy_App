<div class="container">
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th><h5>Name</h5></th>
      <th><h5>Email</h5></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-primary btn-sm text-light"%></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-primary btn-sm text-light" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm text-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-success btn-mg text-light" %>
<%= link_to 'New Micropost', new_micropost_path, :class => "btn btn-success btn-mg text-light ml-5" %>
<%= link_to 'show All Microposts', microposts_path, :class => "btn btn-success btn-mg text-light ml-5" %>
</div>